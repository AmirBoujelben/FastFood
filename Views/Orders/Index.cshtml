@model IEnumerable<FastFood.Models.OrderHeader>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Title and Filtering Options -->
    <div class="row p-3 align-items-center">
        <div class="col-6">
            <h4 class="fw-bold text-primary">List of Orders</h4>
        </div>
        <div class="col-6 text-end">
            <span class="fw-bold">Payment Status:</span>
            <a asp-controller="orders" asp-action="Index" asp-route-status="pending" class="text-decoration-none me-2">Pending</a>
            <a asp-controller="orders" asp-action="Index" asp-route-status="approved" class="text-decoration-none me-2">Approved</a>
            |
            <span class="fw-bold">Order Status:</span>
            <a asp-controller="orders" asp-action="Index" asp-route-status="underprocess" class="text-decoration-none me-2">Under Process</a>
            <a asp-controller="orders" asp-action="Index" asp-route-status="shipped" class="text-decoration-none me-2">Shipped</a>
            |
            <a asp-controller="orders" asp-action="Index" asp-route-status="all" class="text-decoration-none">All</a>
        </div>
    </div>

    <!-- Orders Table -->
    <table class="table table-striped table-bordered rounded mt-4">
        <thead class="bg-secondary text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>@Html.DisplayNameFor(model => model.OrderTotal)</th>
                <th>@Html.DisplayNameFor(model => model.OrderStatus)</th>
                <th>@Html.DisplayNameFor(model => model.PaymentStatus)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td class="align-middle">@item.OrderTotal.ToString("C")</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                    <td class="text-center align-middle">
                        <a asp-action="OrderDetails" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        color: #343a40; /* Dark gray text */
    }

    h4 {
        font-weight: bold;
    }

    .table {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .text-decoration-none {s
        text-decoration: none;
    }

    .fw-bold {
        font-weight: bold;
    }

    .btn {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .text-primary {
        color: #007bff !important;
    }
</style>
