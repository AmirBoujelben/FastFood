@using FastFood.Models
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
<br/><br />
<div class="card p-5">
    <div class="row">
        <div class="col-6">
            <h2 class="card-title">All Users</h2>
        </div>
        <div>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Register a New User</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.ElementAt(i).Name</td>
                            <td>@Model.ElementAt(i).Email</td>
                            <td>
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.ElementAt(i).Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
                                <a asp-controller="Users" asp-action="Delete" asp-route-id="@Model.ElementAt(i).Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No users available.</p>
        }
    </div>

</div>
