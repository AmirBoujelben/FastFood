@model IEnumerable<FastFood.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<div class="container mt-4">
    <h4>@ViewData["Title"]</h4>
    <hr />

    <table class="table table-striped table-bordered rounded mt-4">
        <thead class="bg-secondary text-white">
            <tr>
                <th class="text-center">Image</th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategory)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle text-center">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="Image" style="width: 100px; height: 100px; border-radius: 50%; display: block; margin-left: auto; margin-right: auto;" />
                        }
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.SubCategory.Id)
                    </td>
                    <td class="text-center align-middle">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" style="width: 80px;">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success" style="width: 80px;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" style="width: 80px;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center mt-3">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        color: #343a40; /* Dark gray text */
    }

    h1 {
        font-weight: bold;
    }

    .table {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .btn {
        margin-right: 5px;
    }
</style>
