@model FastFood.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h4 style="padding-top: 25px">@ViewData["Title"] Item</h4>
<hr />

<div class="row justify-content-center" style="padding-top: 50px;">
    <div class="col-md-6">
        <!-- Conteneur stylisé pour les détails -->
        <div class="border p-4 rounded">
            <h5 class="text-primary">Item Details</h5>
            <hr />
            <div class="row">
                <!-- Image de l'item -->
                <div class="col-sm-2 d-flex justify-content-start align-items-center">
                    <div class="miniature-container">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="circular-image" alt="Item Image" />
                        }
                    </div>
                </div>
                <!-- Détails de l'item -->
                <div class="col-sm-10">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.SubCategory)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SubCategory.Title)
                        </dd>
                    </dl>
                </div>
            </div>
            <!-- Boutons d'action -->
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="width: 100px;">Edit</a>
                <a asp-action="Index" class="btn btn-secondary" style="width: 100px;">Back</a>
            </div>
        </div>
    </div>
</div>

<style>
    .miniature-container {
        width: 70px;
        height: 70px;
        overflow: hidden;
        border-radius: 50%;
        margin: 0 auto;
    }

    .circular-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 50%;
    }

    .fw-bold {
        font-weight: bold;
    }

    body {
        background-color: #f8f9fa; /* Light gray background */
        color: #343a40; /* Dark gray text */
    }

    h4 {
        font-weight: bold;
    }

    .text-center {
        text-align: center;
    }

    .border {
        border: 1px solid #343a40; /* Bordure gris foncé */
        border-radius: 10px; /* Coins arrondis */
    }
</style>