@model FastFood.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<form asp-action="Details" method="post">
    <div class="row">
        <!-- Product Name -->
        <div class="col-8">
            <input type="hidden" name="ItemId" value="@Model.ItemId" />
            <div class="row">
                <label asp-for="Item.Title">Product Name: @Model.Item.Title</label>
            </div>
            <!-- Description -->
            <div class="row">
                <label asp-for="Item.Description">Item Description: @Html.Raw(Model.Item.Description)</label>
            </div>
            <!-- Price -->
            <div class="row">
                <label asp-for="Item.Price">Item Price: $@Model.Item.Price</label>
            </div>
            <!-- Category -->
            <div class="row">
                <label asp-for="Item.SubCategory">Item Category: @Model.Item.SubCategory?.Title</label>
            </div>
            <!-- Quantity -->
            <div class="row">
                <label>Quantity:</label>
                <input type="number" asp-for="Count" class="form-control" value="@Model.Count" min="1" required />
            </div>
        </div>
    </div>
    <!-- Submit and Back Buttons -->
    <div class="row mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
