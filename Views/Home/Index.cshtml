@model IEnumerable<FastFood.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h4 class="mt-3">Our Products</h4> <!-- Ajout de la classe mt-5 pour du padding en haut -->
<hr />


<!-- Formulaire de recherche -->
<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchQuery" placeholder="Search a product..." class="form-control" />
        <button type="submit" class="btn btn-primary ml-2">Rechercher</button>
    </div>
</form>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="Item Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">
                        <strong>Description:</strong> @item.Description <br>
                        <strong>Price:</strong> $@item.Price <br>
                    </p>
                    <!-- Bouton "Détails" -->
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Voir les détails</a>
                </div>
            </div>
        </div>
    }
</div>
