@model IEnumerable<FastFood.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-3">
            <!-- Modifié de col-md-4 à col-md-3 -->
            <div class="card">
                <!-- Placeholder image or dynamic image -->
                <img src="/images/default-placeholder.png"
                     class="card-img-top"
                     alt="Item Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">
                        <strong>Description:</strong> @item.Description <br>
                        <strong>Price:</strong> $@item.Price <br>
                        <strong>SubCategory:</strong> @item.SubCategory?.Id
                    </p>
                    <!-- Static button -->
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
        </div>
    }
</div>
