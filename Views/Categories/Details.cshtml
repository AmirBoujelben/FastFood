@model FastFood.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h4 style="padding-top: 25px">@ViewData["Title"] Category</h4>
<hr />

<div class="row justify-content-center" style="padding-top: 50px;">
    <div class="col-md-4">
        <!-- Conteneur stylisé pour les détails -->
        <div class="border p-4 rounded">
            <h5>Category Details</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>
            <!-- Boutons d'action -->
            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="width: 100px;">Edit</a>
                <a asp-action="Index" class="btn btn-secondary" style="width: 100px;">Back</a>
            </div>
        </div>
    </div>
</div>


